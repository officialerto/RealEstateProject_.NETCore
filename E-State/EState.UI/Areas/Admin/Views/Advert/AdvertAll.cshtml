@model List<Advert>

@{
    ViewData["Title"] = "AdvertAll";
}

<table id="table" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Oda Sayısı</th>
            <th>Banyo Sayısı</th>
            <th>Alanı</th>
            <th>Kat</th>
            <th>Adres</th>
            <th>İlan Resimleri</th>
            <th>Resim Ekle</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.NumberOfRooms</td>
                <td>@item.BathroomNumbers</td>
                <td>@item.Area</td>
                <td>@item.Floor</td>
                <td>@item.Address</td>
                <td><a class="btn btn-success" asp-action="ImageList" asp-route-id="@item.Id">İlan Resimleri</a></td>
                <td><a class="btn btn-info" asp-action="ImageCreate" asp-route-id="@item.Id">Resim Ekle</a></td>
                <td><a class="btn btn-danger" data-id="@item.Id" id="delete">Sil</a></td>
                <td><a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Güncelle</a></td>
            </tr>

        }
    </tbody>
    <tfoot>

        <tr>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Oda Sayısı</th>
            <th>Banyo Sayısı</th>
            <th>Alanı</th>
            <th>Kat</th>
            <th>Adres</th>
            <th>İlan Resimleri</th>
            <th>Resim Ekle</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </tfoot>
</table>


