<script>
    $(document).ready(function () {
        $('table.display').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/2.1.7/sorting/turkish-string.js"
            }

        });

    });
</script>
<script type="text/javascript">
    $("#table").on("click", "#delete", function () {

        var id = $(this).data("id");

        swal({
            title: "Silmek İstiyor musunuz?",
            text: "İlan Silinecek gerçekten silmek istediğinize emin misiniz!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "GET",
                        url: '/Admin/Advert/DeleteListAll/' + id,

                        success: function () {
                            toastr.error("İlan Silme İşlmei başarıyla gerçekleşti")

                        }
                    });

                    $(this).parent("td").parent("tr").remove();
                }
            });

    });

</script>