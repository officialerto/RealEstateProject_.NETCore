@model List<Advert>

@{
    ViewData["Title"] = "DeleteList";
}

@if (Model.Count == 0)
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="alert alert-success">Herhangi Silinen bir ilan yok.</div>
            </div>
        </div>
    </div>
}

else
{
    <table class="table table-bordered table table-striped" id="table">
        <tr>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Oda Sayısı</th>
            <th>Banyo Sayısı</th>
            <th>Alanı</th>
            <th>Kat</th>
            <th>Adres</th>
            <th>İlan Resimleri</th>
            <th>Geri Yükle</th>
            <th>Tamamen Sil</th>
        </tr>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.NumberOfRooms</td>
                    <td>@item.BathroomNumbers</td>
                    <td>@item.Area</td>
                    <td>@item.Floor</td>
                    <td>@item.Address</td>
                    <td><a class="btn btn-success" asp-action="AdvertImages" asp-route-id="@item.Id">İlan Resimleri</a></td>

                    <td><a class="btn btn-success" asp-action="RestoreDeleted" asp-route-id="@item.Id">Geri Yükle</a></td>
                    <td><a class="btn btn-danger" data-id="@item.Id" id="delete">Tamamen Sil</a></td>
                </tr>

            }
        </tbody>
    </table>

}
<br>
<a class="btn btn-primary" asp-action="Create">Ekle</a>


<script type="text/javascript">
        $("#table").on("click","#delete",function(){

            var id=$(this).data("id");

            swal({
      title: "Silmek İsitoyr musunuz?",
      text: "İlan Silinecek gerçekten silmek istediğinize emin misiniz!",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    })
    .then((willDelete) => {
      if (willDelete) {
         $.ajax({
                    type:"GET",
                    url:'/User/Advert/FullDelete/'+id,

                    success:function(){
                        toastr.error("İlan Silme İşlmei başarıyla gerçekleşti")

                    }
                });

                $(this).parent("td").parent("tr").remove();
      }
    });

        });

</script>

